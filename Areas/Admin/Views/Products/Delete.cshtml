@model CodeFirst.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Product</h2>

@using (Html.BeginForm("Delete", "Products", FormMethod.Post, new { id = Model.Id, @class = "needs-validation", novalidate = "true" }))
{
    @Html.AntiForgeryToken()
    <table class="table">
        <tr>
            <th>Product Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price.Value.ToString("C")</td>
        </tr>
    </table>
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-dark" })
}
