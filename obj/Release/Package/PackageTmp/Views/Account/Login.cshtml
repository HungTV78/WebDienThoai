@model CodeFirst.ViewModel.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h2 class="text-center">ĐĂNG NHẬP</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form" }))
                    {
                        <div class="mb-3">
                            @Html.LabelFor(temp => temp.Username, new { @class = "form-label" })
                            @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Username", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(temp => temp.Password, new { @class = "form-label" })
                            @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
                            @Html.ValidationMessageFor(temp => temp.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary w-10">Đăng nhập</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



