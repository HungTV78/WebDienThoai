
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="~/Image/Logo1.png" type="image/icon type">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Boxicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        #dow {
            display: flex;
            justify-content: center;
            align-items: center;
            position: fixed;
            width: 50px;
            height: 50px;
            font-size: 35px;
            bottom: 40px;
            right: 20px;
            background-color: #ff0000;
            border-radius: 50%;
            color: #fff;
        }

        header {
            border-bottom: 2px solid #fff;
        }

        .navbar-brand img {
            max-height: 50px;
            max-width: 100%;
        }

        .navbar-nav .nav-link {
            padding: 15px;
        }

        .navbar-nav .nav-item.dropdown:hover .dropdown-menu {
            display: block;
        }

        .promo-area {
            background-color: #f8f9fa;
            padding: 50px 0;
        }

        .single-promo {
            background-color: #ffffff;
            text-align: center;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }

            .single-promo:hover {
                background-color: #000000;
                color: #ffffff;
            }

            .single-promo i {
                font-size: 40px;
                margin-bottom: 15px;
                color: #ffffff;
            }

        .promo1 {
            background-color: #ffc107;
        }

        .promo2 {
            background-color: #007bff;
        }

        .promo3 {
            background-color: #ff006e;
        }

        .promo4 {
            background-color: #00ffff;
        }
    </style>
    @{
        bool isAuthenticated = User.Identity.IsAuthenticated;
    }
</head>
<body>
    <header class="bg-warning text-light">
        <div class="container py-4">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <img src="~/Image/logo.png" alt="Logo cửa hàng">
                </div>
                <div class="col-md-6">
                    <form class="d-flex" action="/home/index">
                        <input class="form-control me-2" id="search" name="search" type="search" placeholder="Tìm kiếm sản phẩm" value="@ViewBag.Search" aria-label="Tìm kiếm">
                        <button class="btn btn-primary btn-lg" type="submit" style="width: 100px; white-space: nowrap;"><i class='bx bx-search-alt-2'></i></button>
                    </form>
                </div>
                <div class="col-md-3">
                    <div class="ms-auto">
                        @if (isAuthenticated)
                        {
                            <a href="/Account/Logout" class="btn btn-primary">Đăng xuất</a>
                        }
                        @*else
                        {
                            <a href="/Account/Login" class="btn btn-primary">Đăng nhập</a>
                            <a href="/Account/Register" class="btn btn-primary">Đăng ký</a>
                        }*@
                    </div>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div style="color:red">Xin chào: @User.Identity.Name</div>
                }
            </div>
            <div class="col-md-12 mt-3">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/Home/Index"><i class='bx bx-home'></i>Trang chủ</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/Products/Index"><i class='bx bxl-product-hunt'></i>Sản phẩm</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Cart/"><i class='bx bx-shopping-bag'></i>Giỏ hàng</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class='bx bx-product'></i> Điện thoại
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=iphone">Iphone</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=samsung">Samsung</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=vivo">Vivo</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=oppo">Oppo</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=xiaomi">Xiaomi</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=nokia">Nokia</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Phụ kiện
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=Sạc">Sạc dự phòng</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=Tai nghe">Tai nghe</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item" href="/admin/products/index?search=Loa">Loa</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/Categories/Index">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/Brands/Index">Brands</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/Users/Index">Users</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://cdn.tgdd.vn/2023/08/banner/SP-800-200-800x200.png" class="d-block w-100" alt="Slide 1">
            </div>
            <div class="carousel-item">
                <img src="https://cdn.tgdd.vn/2023/10/banner/vivo-v29-800-200-800x200-2.png" class="d-block w-100" alt="Slide 2">
            </div>
            <div class="carousel-item">
                <img src="https://cdn.tgdd.vn/2023/11/banner/Poison-monkey-sale-1200-300-1200x300.png" class="d-block w-100" alt="Slide 3">
            </div>
            <div class="carousel-item">
                <img src="https://cdn.tgdd.vn/2023/10/banner/M54-800-200-800x200.png" class="d-block w-100" alt="Slide 4">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExample" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExample" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>
    <div>
        @RenderBody()
    </div>

    <div class="container">
        <div id="brandCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="d-flex justify-content-between">
                        <a href="/products/index?search=nokia"><img src="~/Image/brand1.png" alt=""></a>
                        <a href="/products/index?search=samsung"><img src="~/Image/brand3.png" alt=""></a>
                        <a href="/products/index?search=oppo"><img src="~/Image/brand7.png" alt=""></a>
                        <a href="/products/index?search=iphone"><img src="~/Image/brand4.png" alt=""></a>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="d-flex justify-content-between">
                        <a href="#"><img src="~/Image/brand2.png" alt=""></a>
                        <a href="/products/index?search=iphone"><img src="~/Image/brand4.png" alt=""></a>
                        <a href="/products/index?search=vivo"><img src="~/Image/brand5.png" alt=""></a>
                        <a href="/products/index?search=xiaomi"><img src="~/Image/brand6.png" alt=""></a>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#brandCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#brandCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div id="dow">
        <i class='bx bx-chevron-up'></i>
    </div>

    <footer class="bg-dark text-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>&copy; 2023 Công ty cổ phần Không Tên.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.js" integrity="sha256-a9jBBRygX1Bh5lt8GZjXDzyOB+bWve9EiO7tROUtj/E=" crossorigin="anonymous"></script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>


    <script>
        $(document).ready(function () {
            $(window).scroll(function () {
                if ($(this).scrollTop()) {
                    $('#dow').fadeIn();
                }
                else {
                    $('#dow').fadeOut();
                }
            });
            $("#dow").click(function () {
                $(`html,body`).animate({
                    scrollTop: 0
                }, 500);
            });
        });
    </script>

</body>
</html>